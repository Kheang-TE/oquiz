<%- include('./partials/header') %>

<main class="container py-4">

  <h1>Thèmes</h1>

  <div>
    <% for(const tag of locals.tags){ %>
      <span class="badge bg-primary p-2 mb-1"><%= tag.name %></span>
      <% if(tag.quizzes){ %>
        <ul>
          <% for(const quiz of tag.quizzes) { %>
          <li><a href="/quiz/<%- quiz.id %>"><%= quiz.title %></a></li>
          <% } %>
        </ul>
      <% } else{ %>
        <p class="ms-2">Aucun quizz dans cette catégorie pour le moment....</p>
      <% } %>
    <% } %>
  </div>

</main>

<%- include('./partials/footer') %>
